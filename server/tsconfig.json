{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"allowImportingTsExtensions": true,
		"outDir": "./dist",
		"noEmit": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"exclude": ["node_modules", "./node_modules/@types"],
	"include": ["./**/*.ts"]
	// "ts-node": {
	// 	"esm": true,
	// 	"experimentalSpecifierResolution": "node"
	// }
}
